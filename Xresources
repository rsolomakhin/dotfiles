xterm*allowBoldFonts: false
xterm*faceName: Ubuntu Mono derivative Powerline:size=12:antialias=false
xterm*locale: true
xterm*metaSendsEscape: true
xterm*saveLines: 4096
xterm*termName: xterm-256color
xterm*utf8: 1

! Color names from http://en.wikipedia.org/wiki/X11_color_names#Color_variations

! For black background:
!BLK Cursor
#define _color0        Black
#define _color8        Grey3

!RED Tag
#define _color1        LightCoral
#define _color9        Orchid2

!GRN SpecialKey - Both can be foregournds, but _color2 is also background.
#define _color2        DarkSeaGreen3
#define _color10       DarkSeaGreen3

!YEL Keyword - Both can be backgrounds, but _color3 is also foreground.
#define _color3        Yellow
#define _color11       Gold

!BLU Number
#define _color4        LightSkyBlue2
#define _color12       LightSkyBlue

!MAG Precondit
#define _color5        Plum
#define _color13       Plum1

!CYN Float - _color6 is cyan background. _color14 is cyan foreground.
#define _color6        Turquoise4
#define _color14       Turquoise1

!WHT Search - _color7 is grey background. _color15 is white foreground.
#define _color7        Grey19
#define _color15       White

!TXT Normal, Normal, Cursor
#define _foreground    White
#define _background    Black
#define _cursorColor   White

!! For white background:
!
!!BLK Cursor
!#define _color0        Black
!#define _color8        Grey3
!
!!RED Tag
!#define _color1        Brown
!#define _color9        Red3
!
!!GRN SpecialKey - Both can be foregournds, but _color2 is also background.
!#define _color2        DarkGreen
!#define _color10       DarkGreen
!
!!YEL Keyword - Both can be backgrounds, but _color3 is also foreground.
!#define _color3        Gold3
!#define _color11       Gold
!
!!BLU Number
!#define _color4        NavyBlue
!#define _color12       Blue3
!
!!MAG Precondit
!#define _color5        Purple4
!#define _color13       BlueViolet
!
!!CYN Float - _color6 is cyan background. _color14 is cyan foreground.
!#define _color6        DeepSkyBlue2
!#define _color14       DeepSkyBlue4
!
!!WHT Search - _color7 is grey background. _color15 is white foreground.
!#define _color7        Grey93
!#define _color15       White
!
!!TXT Normal, Normal, Cursor
!#define _foreground    Black
!#define _background    White
!#define _cursorColor   Black

xterm*color0         : _color0
xterm*color1         : _color1
xterm*color2         : _color2
xterm*color3         : _color3
xterm*color4         : _color4
xterm*color5         : _color5
xterm*color6         : _color6
xterm*color7         : _color7
xterm*color8         : _color8
xterm*color9         : _color9
xterm*color10        : _color10
xterm*color11        : _color11
xterm*color12        : _color12
xterm*color13        : _color13
xterm*color14        : _color14
xterm*color15        : _color15
xterm*foreground     : _foreground
xterm*background     : _background
xterm*cursorColor    : _cursorColor
