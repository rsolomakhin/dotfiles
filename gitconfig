[user]
	name = Rouslan Solomakhin
	email = rouslan.solomakhin@gmail.com
[core]
	autocrlf = false
	filemode = false
	excludesfile = ~/.cvsignore
[color]
	ui = true
[push]
	default = simple
[alias]
	ci = commit
	co = checkout
	ls = ls-files
	reup = rebase-update
	st = status
	br = branch
	brv = branch -vv
	can = commit -a --amend --no-edit
	du = diff @{u}
	dus = diff @{u} --stat
